<%= simple_form_for(@album) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cover_photo, as: :hidden, input_html: { value: f.object.cached_cover_photo_data } %>
    <%= f.input :cover_photo, as: :file %>
    <% if @album.cover_photo %>
      <p>
        <%= image_tag @album.cover_photo_url, class: "img-thumbnail", style: "max-width: 150px; max-height: 150px" %>
      </p>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
